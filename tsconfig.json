{
    "compilerOptions": {
      "jsx": "react-jsx", // ou "react" se for React 17
      "target": "es6",
      "module": "esnext",
      "lib": ["dom", "dom.iterable", "esnext"],
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true,
      "strict": true,
      "baseUrl": "./src",
      "paths": {
        "components/*": ["components/*"],
        "utils/*": ["utils/*"],
        "pages/*": ["pages/*"]
      }
    },
    "include": ["src"]
  }